<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <io.anyline.view.TetragonView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tetragon_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/tetragon_point1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:padding="@dimen/polygonViewCircleWidth"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/tetragon_point2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:padding="@dimen/polygonViewCircleWidth"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/tetragon_point3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:padding="@dimen/polygonViewCircleWidth"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/tetragon_point4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:padding="@dimen/polygonViewCircleWidth"
            android:src="@drawable/circle" />

    </io.anyline.view.TetragonView>
</LinearLayout>