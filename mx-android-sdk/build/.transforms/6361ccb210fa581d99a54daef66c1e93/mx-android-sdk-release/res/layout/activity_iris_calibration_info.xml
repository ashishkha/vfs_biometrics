<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/acitivity_iris_top_bar"
        android:layout_width="match_parent"
        android:layout_height="87.5dp"
        android:minHeight="87.5dp"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/textView"
            style="@style/Tascent.Toolbar.TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/iris_calibration_title"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/textColorPrimary"/>

        <Button
            android:id="@+id/activity_iris_calibration_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/iris_calibration_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Tascent.Toolbar.Button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="128dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="@string/iris_calibration_info"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_iris_calibration_info_start"
        />

    <Button
        android:id="@+id/activity_iris_calibration_info_start"
        style="@style/Tascent.Toolbar.Button"
        android:layout_width="311dp"
        android:layout_height="56dp"
        android:layout_marginBottom="62dp"

        android:gravity="center"
        android:text="@string/iris_calibration_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintBottom_toTopOf="@id/activity_iris_calibration_info_reset"

        android:background="@color/dialogPositiveActionColor"
        android:textColor="@color/textColorPrimary"

        android:textSize="20sp"

        />

    <Button
        android:id="@+id/activity_iris_calibration_info_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="53dp"
        android:text="@string/iris_calibration_info_reset"
        android:textAppearance="@style/Tascent.Toolbar.Button.Text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/deleteActionColor"
        android:background="@color/clearColor"
        android:textSize="18sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>